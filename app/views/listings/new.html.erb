<%= form_for @new_listing do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>
	<%= f.label :property_type %>
	<%= f.text_field :property_type %><br>
	<%= f.label :address %>
	<%= f.text_field :address %><br>
	<%= f.label :city %>
	<%= f.text_field :city %><br>
	<%= f.label :country %>
	<%= f.text_field :country %><br>
	<%= f.label :no_bed %>
	<%= f.number_field :no_bed, {min: 0} %><br>
	<%= f.label :no_bathroom %>
	<%= f.number_field :no_bathroom, {min: 0}%><br>
	<%= f.label :max_guest, "" %>
	<%= f.number_field :max_guest, {min: 0} %><br>
	<%= f.label :price %>
	<%= f.number_field :price %><br>
	<%= f.label :description %>
	<%= f.text_field :description %><br>
	<%= submit_tag("Create listing") %>
	<%= link_to "Back to listings", listings_path %>
<% end %>

<%= @message if @message %>